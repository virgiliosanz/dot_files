# Turn off the annoying startup message
startup_message off

defscrollback 5000
hardcopy_append on
defutf8 on
vbell on

term screen-256color
termcapinfo xterm*|Eterm|mlterm|rxvt 'hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007'

# Default shell
shell "/bin/bash"

#####Â Keys
# Ctr+z sustituye a ctrl+a
escape ^Zz

# Alt+right Alt+left -> move between windows
bindkey "^[[1;9C" next
bindkey "^[[1;9D" prev

## do not trash BackSpace, usually DEL
bindkey -k kb
bindkey -d -k kb
# do not trash Delete, usually ESC [ 3 ~
bindkey -k kD
bindkey -d -k kD

# Para hacer scroll!!!
# Press "Ctrl-A" on the keyboard and press "Esc."
# Press the "Up" and "Down" arrow keys or the "PgUp" and "PgDn" keys to scroll through previous output.


# 8-16 Color Support
termcap  xterm AF=\E[3%dm
terminfo xterm AF=\E[3%p1%dm
termcap  xterm AB=\E[4%dm
terminfo xterm AB=\E[4%p1%dm

# 256 Color Support
terminfo xterm Co=256
termcap  xterm Co=256
termcap  xterm AF=\E[38;5;%dm
terminfo xterm AF=\E[38;5;%p1%dm
termcap  xterm AB=\E[48;5;%dm
terminfo xterm AB=\E[48;5;%p1%dm

hardstatus on
#hardstatus alwayslastline "%{yk}[%{Y}%H%{y}]%=  %{wk}%?%-Lw%?%{R}[%{W}%n*%f %t%?[%u]%?%{R}]%{w}%?%+Lw%?%?%= %{yk}[%{Y}%D, %d-%m-%Y %C%{y}]" #[%{Y}load: %l%{y}]"
hardstatus alwayslastline "%{= kb}[ %=%{w}%?%-Lw%?%{b}(%{W}%n*%f %t%?(%u)%?%{b})%{w}%?%+Lw%?%?%= %{b} ][%{B} %H %{W}%l %{b}][%{B} %d-%m-%Y %{W}%0c %{b}]"

# Screens by default
screen -t 'tail'   1   sudo tail -f /var/log/messages /var/log/syslog /var/log/auth.log /var/log/kern.log /var/log/daemon.log /var/log/nginx/*.log
screen -t 'htop'   2   htop
screen -t '1'   3   bash -l
screen -t '2'   4   bash -l
screen -t '3'   5   bash -l
screen -t '4'   6   bash -l
screen -t '5'   7   bash -l
